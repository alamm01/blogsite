<div class="text-center">
  <h2>{{title}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <form id="comment">
    <input class="form-input" type="hidden" id="blog_id" name="blog_id" value="{{id}}" />
    <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    <p>
      <button type="submit" class="btn btn-primary">Leave a comment</button>
    </p>
  </form>


</div>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}